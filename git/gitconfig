[alias]
  a = add
  b = branch
  c = "commit -s"
  cd = "!git commit -s -m \"$(date)\""
  cdp = "!git commit -s -m \"$(date)\"; git push"
  cleanup = "!git fetch --all --prune; git branch --merged origin/master | grep -v \"\\*\" | grep -v \"\\  master\" | xargs -n 1 git branch -d"
  co = checkout
  d = "diff --word-diff=color"
  dm = "diff --word-diff=color main"
  l = "log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'"
  s = "status --ignored"
  sh = "show HEAD"
[commit]
  gpgsign = true
[core]
  editor = io.neovim.nvim
  excludesfile = /home/jose/.gitignore_global
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[format]
  signoff = true
[gitreview]
  username = josecastillolema
[gpg]
  format = ssh
[init]
  defaultBranch = main
